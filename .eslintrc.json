{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:vue-pug-sfc/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "vue-pug-sfc",
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": 0,
    "vue/script-setup-uses-vars": "error"
  }
}
